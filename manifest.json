{
  "name": "Site Blocker - Productive",
  "description": "Stay focused and boost productivity with site blocker extension. Take control of your online time by blocking distracting websites and creating custom filters to help you maintain concentration on your important tasks.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "./src/assets/img/icon-16x16.png",
    "32": "./src/assets/img/icon-32x32.png",
    "48": "./src/assets/img/icon-48x48.png",
    "128": "./src/assets/img/icon-128x128.png"
  },
  "background": {
    "service_worker": "./dist/js/background.js"
  },
  "action": {
    "default_popup": "./src/popup.html",
    "default_icons": {
      "16": "./src/assets/img/icon-16x16.png",
      "32": "./src/assets/img/icon-32x32.png",
      "48": "./src/assets/img/icon-48x48.png",
      "128": "./src/assets/img/icon-128x128.png"
    }
  },
  "options_page": "./src/options.html",
  "permissions": ["activeTab", "tabs", "storage", "scripting"]
}
